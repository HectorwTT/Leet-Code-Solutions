var triangleNumber = function(nums) {
     nums.sort((x,y)=>x-y);
     let answer=0;
     for(let k=nums.length-1;k>=2;k--){
      let i=0;
      let j=k-1;
      while(i<j){
       if(nums[i]+nums[j]>nums[k]){
        answer+=j-i;
        j--;
       }else i++; 
      }
     }
     return answer;    
};
