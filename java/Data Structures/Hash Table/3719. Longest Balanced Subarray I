class Solution {
    public int longestBalanced(int[] nums) {
     int  answer=0;
     HashMap<Integer,Integer> evenNumberMap;
     HashMap<Integer,Integer> oddNumberMap;
     for(int i=0;i<nums.length;i++){
      evenNumberMap=new HashMap<>();
      oddNumberMap=new HashMap<>();  
      if(nums[i]%2==0)evenNumberMap.put(nums[i],1);
      else oddNumberMap.put(nums[i],1);  
      for(int j=i+1;j<nums.length;j++){
         if(nums[j]%2==0){if(!evenNumberMap.containsKey(nums[j]))evenNumberMap.put(nums[j],1);}
         else{ if(!oddNumberMap.containsKey(nums[j]))oddNumberMap.put(nums[j],1); }
         if(evenNumberMap.size()==oddNumberMap.size())answer=Math.max(answer,j-i+1); 
      }  
     }
     return answer;   
    }
}
