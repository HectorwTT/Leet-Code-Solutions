class Solution {
    public int scoreOfParentheses(String s) {
      int total=0;
      Stack<Integer> stack=new Stack<>();
      s=s.replace("()","1");System.out.println(s);
      int sum=0;
      for(int i=0;i<s.length();i++){
       if(stack.isEmpty()){
        if(s.charAt(i)=='1'){
         total++;
         sum=total; 
        }else {
         stack.push(sum);
         sum=0;
        }   
       }else{
         if(s.charAt(i)=='('){
           stack.push(sum); 
           sum=0;
         }else if(s.charAt(i)=='1')sum++;
         else{
           sum*=2;
           int lastSum=stack.pop();
           if(stack.isEmpty())total+=sum; 
           else sum=lastSum+sum;
         }
       }   
      }
      return total; 
    }
}
