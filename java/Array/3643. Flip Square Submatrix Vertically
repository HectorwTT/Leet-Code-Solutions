class Solution {
    public int[][] reverseSubmatrix(int[][] grid, int x, int y, int k) {
      int [] [] answer=new  int[k][k];  
      int startx=x+k-1;
      int starty=y+k-1;
      for(int i=0;i<k;i++){
       for(int j=0;j<k;j++){
        answer[i][j]=grid[startx-i][y+j];
       } 
      }
      for(int i=0;i<k;i++){
       for(int j=0;j<k;j++){
        grid[x+i][y+j]=answer[i][j];
       } 
      }
      return grid;
    }
}
