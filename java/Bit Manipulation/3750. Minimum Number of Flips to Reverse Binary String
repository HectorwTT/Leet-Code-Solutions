class Solution {
    public int minimumFlips(int n) {
      String  binary="";    
      int number=n;
      int answer=0;
      while(number!=0){
       int mod=number%2;
       binary+=mod;
       number/=2; 
      }
      StringBuffer sb=new StringBuffer(binary);
      String reverseBinary=sb.reverse().toString();
      for(int i=0;i<binary.length();i++){
       if(binary.charAt(i)!=reverseBinary.charAt(i)) answer++;
      }
      return answer;
    }
}
