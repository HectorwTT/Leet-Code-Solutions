class Solution {
public:
    bool hasAlternatingBits(int n) {
       string binary="";
       int numOfAdjacent=0;
       while(n!=0){
        int mod=n%2;
        binary+=mod;
        n/=2;
       }
       for(int i=1;i<binary.size();i++){
        char bit=binary[i];
        char prev=binary[i-1];
        if(bit!=prev)numOfAdjacent++;
       } 
       return numOfAdjacent==binary.size()-1;    
    }
};
