class Solution {
public:
    int reverseBits(int n) {
     string binary="";
     int answer=0;
     while(n>0){
      int mod=n%2;
      binary=to_string(mod)+binary;
      n/=2; 
     }
     int numberOfZeroes=32-binary.size();
     int count=0;
     while(count<numberOfZeroes){
      binary="0"+binary;
      count++;  
     }
     for(int i=0;i<binary.size();i++) if(binary[i]=='1')answer+=std::pow(2,i); 
     return answer;   
    }
};
