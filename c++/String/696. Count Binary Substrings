class Solution {
public:
    int countBinarySubstrings(string s) {
     vector<int>numOfZeroes;
     vector<int> numOfOnes;
     for(int i=0;i<s.size();i++){
       numOfZeroes.push_back(0);
       numOfOnes.push_back(0); 
     }
     int countOfZeroes=0;
     int countOfOnes=0; 
     int total=0;  
     for(int i=0;i<s.size();i++){
      char bit=s[i];
      if(bit=='1'){
       countOfZeroes=0;
       countOfOnes++;
      }else{
       countOfOnes=0;
       countOfZeroes++;
      }
      if(countOfZeroes!=0) numOfZeroes[i]=countOfZeroes;
      if(countOfOnes!=0)numOfOnes[i]=countOfOnes;
      if(numOfZeroes[i]!=0){
       if(i-countOfZeroes>=0 && numOfOnes[i-countOfZeroes]>=numOfZeroes[i]) total++; 
      }else if(numOfOnes[i]!=0){
        if(i-countOfOnes>=0 && numOfZeroes[i-countOfOnes]>=numOfOnes[i])total++;  
      }else continue;
     }
    return total;             
    }
};
