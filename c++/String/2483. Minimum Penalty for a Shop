class Solution {
public:
    int bestClosingTime(string customers) {
     vector<int> numberOfYs;
     vector<int> numberOfNs; 
     for(int i=0;i<customers.size();i++){
      numberOfYs.push_back(0);
      numberOfNs.push_back(0);  
     }
     int minimumPenalty=customers.size();
     int answer=0;
     int totalOfYs=0;
     int totalOfNs=0;
     for(int i=0;i<customers.size();i++){
      char ch= customers[i];
      if(ch=='Y'){
       totalOfYs++;
       if(i==0)numberOfYs[i]=1;
       else{
        numberOfYs[i]=totalOfYs;
        numberOfNs[i]=numberOfNs[i-1];
       }
      }else{
        totalOfNs++;
        if(i==0)numberOfNs[i]=1;
        else{
         numberOfNs[i]=totalOfNs;
         numberOfYs[i]=numberOfYs[i-1];   
        } 
      }      
     } 
     int penalty=totalOfYs;
     if(totalOfNs==customers.size())return answer;
     for(int i=0;i<customers.size();i++){
     penalty=0;
      if(i==0)penalty=totalOfYs;
      else{
       int numberOfNsBeforeClosing=numberOfNs[i-1]; 
       int numberOfYsAfterClosing=totalOfYs-numberOfYs[i-1];
       penalty=numberOfNsBeforeClosing+numberOfYsAfterClosing;
      }
      if(penalty<minimumPenalty){
       minimumPenalty=penalty;
       answer=i; 
     }
     }
     if(totalOfNs<minimumPenalty)answer=customers.size();
     return answer;  
    }
};
