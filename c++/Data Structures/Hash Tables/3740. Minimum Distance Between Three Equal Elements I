class Solution {
public:
    int minimumDistance(vector<int>& nums) {
     int min=10000;
     unordered_map<int,vector<int>> map;
     for(int i=0;i<nums.size();i++){
      if(map.find(nums[i])==map.end()){
       vector<int> list;
       list.push_back(i);
       map[nums[i]]=list; 
      }else{
       vector<int> list=map[nums[i]];
       list.push_back(i);
       map[nums[i]]=list; 
      }  
     }
     for(auto key: map){
      vector<int> list=key.second;
      if(list.size()<3)continue;
      for(int i=0;i<=list.size()-3;i++){
        int a=list[i];
        int b=list[i+1];
        int c=list[i+2];
        int dist=std::abs(a-b)+std::abs(b-c)+std::abs(a-c);
        min=std::min(dist,min); 
      }  
     }
     if(min==10000)return -1;
     else return min;       
    }
};
