class Solution {
public:
    string mapWordWeights(vector<string>& words, vector<int>& weights) {
      string answer="";
      for(int i=0;i<words.size();i++){
       string word=words[i];
       int sum=0;
       for(int j=0;j<word.size();j++){
        char ch=word[j];
        int chVal=ch-97;
        sum+=weights[chVal]; 
       }
       int weightMod26=sum%26;
       int newChVal=122-weightMod26;
       char newCh=(char)newChVal; 
       answer+=newCh;
      }  
      return answer;    
    }
};
