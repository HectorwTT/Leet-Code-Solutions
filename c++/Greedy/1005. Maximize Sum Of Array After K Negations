class Solution {
public:
    int largestSumAfterKNegations(vector<int>& nums, int k) {
      int score=0;
        std::sort(nums.begin(),nums.end());
        int index=0;
        int count=0;
        while(count !=k){
         nums[index]= -1*nums[index];
         if(index+1 < nums.size() && nums[index+1]<=0 )index++;
         else{
            if(index+1==nums.size())break;
            int next= nums[index+1];
            int current= nums[index];
            if(index<nums.size() && current>0 && next>0 && next<current)index++;
         }
         count++;
         if(k>nums.size()){
             std::sort(nums.begin(),nums.end());
             index=0;
         }
        }
        for(int i=0;i<nums.size();i++){
         score+=nums[i];
        }        
        return score;    
    }
};
